{% extends 'layout.html.twig' %}

{% set p = payload ?? {} %}
{% if p is not iterable %}{% set p = {} %}{% endif %}

{# ✅ NUEVO: groups (si existe) #}
{% set groups = p.groups ?? [] %}
{% if groups is not iterable %}{% set groups = [] %}{% endif %}

{# ✅ fallback antiguo: columns #}
{% set columnsFlat = p.columns ?? [] %}
{% if columnsFlat is not iterable %}{% set columnsFlat = [] %}{% endif %}

{# ✅ si no hay groups, creamos 1 grupo con columns #}
{% if groups is empty and columnsFlat is not empty %}
  {% set groups = [columnsFlat] %}
{% endif %}

{# ✅ lista plana real para contadores/tablas (todas las columnas de todos los grupos) #}
{% set columnsAll = [] %}
{% for g in groups %}
  {% if g is iterable %}
    {% set columnsAll = columnsAll|merge(g) %}
  {% endif %}
{% endfor %}

{% set type = p.type ?? '' %}
{% set instalacion = p.instalacion ?? '' %}

{% set doorColor = p.colorDoor ?? '#3a9efc' %}
{% set doorColorRal = p.colorDoorRal ?? '' %}
{% set bodyColor = p.colorBody ?? '#000' %}
{% set bodyColorRal = p.colorBodyRal ?? '' %}

{% set bg = p.fondo ?? '' %}
{% set placement = p.placement ?? '' %}
{% set material = p.material ?? '' %}
{% set addons = p.addons ?? {} %}

{% set isHome = (type == 'home') %}
{% set isZocalo = (isHome and instalacion == 'zocalo') %}
{% set isEmpotradoLike = (isHome and (instalacion == 'empotrado' or instalacion == 'soporte_suelo')) %}

{% set topCap = isZocalo ? (p.topCap|default(90)) : 90 %}
{% set bottomCap = isZocalo ? 70 : 90 %}
{% set singleCap = isEmpotradoLike ? (p.singleCap|default(40)) : 180 %}

{# soporte suelo #}
{% set selectedType  = p.bracketType ?? '' %}   {# 'patas' | 'brazos' | '' #}
{% set selectedColor = p.bracketColor ?? '' %}  {# 'blanco' | 'negro' | 'plata' | '' #}
{% set isSoporteSuelo = (instalacion == 'soporte_suelo') %}

{% set bgLabel =
  bg == '300'  ? 'Serie 300' :
  bg == '400'  ? 'Serie 400' :
  bg == '500'  ? 'Serie 500' : '—'
%}

{% set placementLabel =
  placement == 'interior' ? 'Interior' :
  placement == 'exterior' ? 'Exterior' : '—'
%}

{% block page_title %}Resumen{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    :root{
      --hscale: 4.16;

      --bg:#f6f9fc;
      --ink:#0b1220;
      --muted:#6b7280;
      --line: rgba(15,23,42,.12);
      --shadow: 0 10px 25px rgba(2,20,60,.10);
      --shadow-sm: 0 6px 14px rgba(2,20,60,.10);

      --kuik-blue-900:#003b73;
      --kuik-blue-600:#0b76d8;
      --kuik-blue-500:#1187e6;
    }

    .page-wrap{
      max-width: 1400px;
      margin: 22px auto 50px;
      padding: 0 14px;
    }

    .page-head{
      display:flex;
      align-items:flex-end;
      justify-content:space-between;
      gap:14px;
      flex-wrap:wrap;
      margin-bottom:14px;
    }

    .page-title{
      margin:0;
      font-size:34px;
      font-weight:900;
      letter-spacing:-0.02em;
    }

    .page-sub{
      margin-top:6px;
      color:var(--muted);
      font-size:15px;
      display:flex;
      align-items:center;
      gap:10px;
      flex-wrap:wrap;
    }

    .grid{
      display:grid;
      grid-template-columns: 1.35fr .65fr;
      gap:14px;
      align-items:start;
    }
    @media (max-width: 980px){
      .grid{ grid-template-columns: 1fr; }
    }

    .card{
      background:#fff;
      border:1px solid var(--line);
      border-radius:16px;
      padding:16px;
      box-shadow: 0 1px 0 rgba(15,23,42,.04);
    }

    .card h3{
      margin:0 0 12px;
      font-size:16px;
      font-weight:900;
      letter-spacing:-0.01em;
    }

    .section-sep{
      height:1px;
      background: rgba(15,23,42,.10);
      margin:14px 0;
    }

    .kvs{
      display:grid;
      grid-template-columns: 1fr 1fr;
      gap:10px;
    }

    .kv{
      border:1px solid rgba(15,23,42,.10);
      border-radius:14px;
      padding:10px 12px;
      background:#fbfcfe;
    }
    .kv .k{ font-size:12px; color:var(--muted); font-weight:900; }
    .kv .v{ font-size:14px; font-weight:900; margin-top:4px; color:var(--ink); }

    .preview-wrap{
      border:1px solid rgba(15,23,42,.10);
      border-radius:16px;
      padding:12px;
      overflow: visible;
    }

    .preview-stage{
      position: relative;
      overflow: visible;
      display:flex;
      justify-content:center;
      align-items:flex-start;
      padding-bottom: 100px;
    }

    /* ✅ agrupaciones en preview */
    .groups-stage{
      display:flex;
      flex-direction:column;
      gap:100px;
      align-items:center;
      width:100%;
    }
    .group-label{
      font-weight:900;
      color:#0b1220;
      font-size:14px;
      margin:6px 0 10px;
      text-align:center;
    }

    /* ✅ cols en GRID para alinear patas */
    .cols{
      display:grid;
      grid-template-columns: repeat(var(--colsN), 135px);
      justify-content:center;
      align-items:flex-start;
      margin-top:10px;
    }

    .col-shell{ width:135px; display:flex; flex-direction:column; gap:6px; }
    .col-topbar{
      padding:7px 10px;
      border-radius:12px;
      background: linear-gradient(135deg, var(--kuik-blue-900), #005fae);
      color:#fff;
      font-weight:900;
      box-shadow: var(--shadow-sm);
    }

    .col-card{
      width:135px;
      border-style:solid;
      border-color: var(--col-border, #000);
      border-left-width:4px;
      border-right-width:4px;
      border-top-width:8px;
      border-bottom-width:8px;
      border-radius:12px;
      overflow:hidden;
      background:#f7f7f7;
      box-shadow: var(--shadow);

      position: relative;
      z-index: 2;
    }

    .col-body{
      height:calc(180px * var(--hscale));
      background:#eaeaea;
      display:flex;
      flex-direction:column;
    }

    .col-half{
      height:calc(90px * var(--hscale));
      display:flex;
      flex-direction:column;
      overflow:hidden;
    }

    .half-sep{ border-top:2px dashed rgba(0,0,0,.28); }

    .door{
      width:100%;
      border:1px solid rgba(44,62,80,.9);
      background: var(--door-color, #3a9efc);
      position:relative;
      display:flex;
      align-items:center;
      justify-content:center;
    }

    .door.screen{ padding:6px; }
    .door.screen img{
      width:125%;
      height:125%;
      object-fit:contain;
      pointer-events:none;
      user-select:none;
    }

    .door .num{
      position:absolute;
      left:6px;
      top:4px;
      font-weight:900;
      font-size:12px;
      background: rgba(0,0,0,.65);
      color:#fff;
      border-radius:999px;
      padding:2px 7px;
      line-height:1.2;
    }

    .door .badges{
      position:absolute;
      right:6px;
      top:4px;
      display:flex;
      gap:4px;
    }
    .badge-mini{
      font-size:11px;
      font-weight:900;
      background: rgba(255,255,255,.92);
      border:1px solid rgba(0,0,0,.18);
      border-radius:999px;
      padding:1px 7px;
    }

    .addons-table{
      width:100%;
      border-collapse:separate;
      border-spacing:0;
      margin-top:10px;
      border:1px solid rgba(15,23,42,.12);
      border-radius:14px;
      overflow:hidden;
      background:#fff;
    }
    .addons-table th,
    .addons-table td{
      padding:10px 12px;
      border-bottom:1px solid rgba(15,23,42,.08);
      font-size:14px;
      text-align:left;
    }
    .addons-table th{
      background:#fbfcfe;
      font-weight:900;
      color:#334155;
      font-size:12px;
    }
    .addons-table tr:last-child td{ border-bottom:0; }

    .btn-row{
      display:flex;
      gap:10px;
      flex-wrap:wrap;
      align-items:center;
      margin:14px;
    }

    .btn{
      border:1px solid rgba(15,23,42,.12);
      background:#fff;
      border-radius:12px;
      padding:10px 14px;
      font-weight:900;
      cursor:pointer;
      display:inline-flex;
      align-items:center;
      gap:10px;
      text-decoration:none;
      color:#0b1220;
      transition:.15s;
    }
    .btn:hover{ background: rgba(2,6,23,.03); }
    .btn.primary{
      background:#0b76d8;
      border-color:#0b76d8;
      color:#fff;
      box-shadow: 0 10px 18px rgba(11,118,216,.18);
    }
    .btn.primary:hover{ filter:brightness(.98); transform: translateY(-1px); }

    .muted{ color:var(--muted); font-size:15px; }

    .id-pill{
      display:inline-flex;
      align-items:center;
      gap:8px;
      padding:6px 10px;
      border-radius:999px;
      background: rgba(11,118,216,.10);
      border:1px solid rgba(11,118,216,.18);
      font-weight:900;
      color:#0b76d8;
    }

    /* ===== Soporte suelo (Resumen) ===== */
    .support-wrap{
      --armW: 65px;
      --armOverlap: 14px;

      /* ✅ columnas/patas */
      --colW: 135px;

      position: relative;
      display: inline-block;
      padding-left:  calc(var(--armW) - var(--armOverlap));
      padding-right: calc(var(--armW) - var(--armOverlap));
    }

    .arm-img{
      position:absolute;
      top: 130px;
      width: var(--armW);
      height: calc(90px * var(--hscale) + 16px);
      object-fit: contain;
      z-index: 1;
      pointer-events:none;
      user-select:none;
    }

    .arm-img.left{
      left: calc(-0.8 * var(--armOverlap));
      transform: scaleX(-1);
    }

    .arm-img.right{
      right: calc(-0.7 * var(--armOverlap));
    }

    /* ✅ patas por grupo (imagen + grid) */
    .legs-under{
      width:100%;
      display:grid;
      grid-template-columns: repeat(var(--colsN), var(--colW));
      justify-content:center;
      pointer-events:none;
      user-select:none;
      z-index:1;
      padding: 0 18px;
      margin-top:-10px;
    }

    .leg-img{
      width:135px;
      height:175px;
      object-fit:contain;
      justify-self:center;
    }
  </style>
{% endblock %}

{% block content %}
  {% set scale = 4.16 %}

  <div class="page-wrap">

    <div class="page-head">
      <div>
        <h2 class="page-title">Resumen</h2>
        <div class="page-sub">
          <span class="id-pill">ID configuración: {{ configuration.id }}</span>

          {% if configuration.status == 0 %}
            <span class="badge open">Abierta</span>
          {% elseif configuration.status == 1 %}
            <span class="badge closed">Cerrada</span>
          {% else %}
            <span class="badge accepted">Aceptada</span>
          {% endif %}
        </div>
      </div>
    </div>

    <div class="btn-row">
      <a class="btn" href="{{ path('configuration_project_new') }}">Nuevo proyecto</a>

      {% if project.status == 0 %}
        <a class="btn primary" href="{{ path('configuration_type', { project_id: project.id }) }}">Nueva configuración</a>
      {% endif %}

      {% if configuration.status == 0 %}
        <a class="btn primary" href="{{ path('configuration_columns', { project_id: project.id, config_id: configuration.id }) }}">Editar configuración</a>
      {% endif %}

      <a class="btn primary" href="{{ path('configuration_pdf', { id: configuration.id }) }}">Descargar PDF</a>
    </div>

    <div class="grid">

      {# IZQUIERDA #}
      <div class="card">
        <h3>Vista previa</h3>

        <div class="preview-wrap">

          {% if isSoporteSuelo and selectedType == 'brazos' and selectedColor %}
            {% set armSrc =
              selectedColor == 'blanco' ? asset('assets/brazo_blanco.jpg') :
              (selectedColor == 'plata' ? asset('assets/brazo_plata.jpg') : asset('assets/brazo_negro.jpg'))
            %}
          {% endif %}

          <div class="preview-stage" id="previewCapture">

            <div class="groups-stage" style="--door-color: {{ doorColor }}; --col-border: {{ bodyColor }};">

              {% if groups is empty %}
                <div class="muted">No hay columnas en esta configuración.</div>
              {% else %}
                {% set doorIndex = 0 %}

                {% for groupCols in groups %}
                  {% if groupCols is not iterable %}{% set groupCols = [] %}{% endif %}

                  <div class="group-block">
                    <div class="group-label">Agrupación {{ loop.index }} ({{ groupCols|length }} columnas)</div>

                    {# ✅ --colsN para alinear cols + patas #}
                    <div class="support-wrap" style="--colsN: {{ groupCols|length }};">

                      {# ✅ brazos por agrupación #}
                      {% if isSoporteSuelo and selectedType == 'brazos' and selectedColor %}
                        <img class="arm-img left"  src="{{ armSrc }}" alt="Brazo izquierdo">
                        <img class="arm-img right" src="{{ armSrc }}" alt="Brazo derecho">
                      {% endif %}

                      <div class="cols" id="previewCols">

                        {% for col in groupCols %}
                          {% set isEmpotrado = (col.single is defined and col.single is not empty) %}

                          <div class="col-shell">
                            {#<div class="col-topbar">Columna {{ loop.index }}</div>#}

                            <div class="col-card">
                              <div class="col-body"
                                {% if isEmpotrado %}
                                  style="height: {{ (singleCap * scale) }}px;"
                                {% elseif type == 'home' and instalacion == 'zocalo' %}
                                  style="height: {{ ((topCap + bottomCap) * scale) }}px;"
                                {% endif %}>

                                {% if isEmpotrado %}

                                  <div class="col-half" style="height: {{ singleCap * scale }}px;">
                                    {% for blk in (col.single.blocks ?? []) %}
                                      {% set hh = blk.h|default(blk) %}
                                      {% set btype = blk.type|default('door') %}

                                      {% if btype != 'screen' %}
                                        {% set doorIndex = doorIndex + 1 %}
                                      {% endif %}

                                      <div class="door {{ btype == 'screen' ? 'screen' : '' }}"
                                           style="height: {{ hh * scale }}px;">

                                        {% if btype == 'screen' %}
                                          <img src="{{ asset('assets/pantalla.png') }}" alt="Pantalla">
                                        {% else %}
                                          <div class="num">{{ doorIndex }}</div>

                                          <div class="badges">
                                            {% set key = doorIndex ~ '' %}
                                            {% set sel = addons[key] ?? addons[doorIndex] ?? null %}
                                            {% set socket = (sel is iterable and (sel.socket ?? false)) ? true : false %}
                                            {% set usb    = (sel is iterable and (sel.usb ?? false)) ? true : false %}
                                            {% if socket %}<span class="badge-mini">ENCH</span>{% endif %}
                                            {% if usb %}<span class="badge-mini">USB</span>{% endif %}
                                          </div>
                                        {% endif %}
                                      </div>
                                    {% endfor %}
                                  </div>

                                {% else %}

                                  <div class="col-half" style="height: {{ topCap * scale }}px;">
                                    {% for blk in (col.top.blocks ?? []) %}
                                      {% set hh = blk.h|default(blk) %}
                                      {% set btype = blk.type|default('door') %}

                                      {% if btype != 'screen' %}
                                        {% set doorIndex = doorIndex + 1 %}
                                      {% endif %}

                                      <div class="door {{ btype == 'screen' ? 'screen' : '' }}"
                                           style="height: {{ hh * scale }}px;">

                                        {% if btype == 'screen' %}
                                          <img src="{{ asset('assets/pantalla.png') }}" alt="Pantalla">
                                        {% else %}
                                          <div class="num">{{ doorIndex }}</div>

                                          <div class="badges">
                                            {% set key = doorIndex ~ '' %}
                                            {% set sel = addons[key] ?? addons[doorIndex] ?? null %}
                                            {% set socket = (sel is iterable and (sel.socket ?? false)) ? true : false %}
                                            {% set usb    = (sel is iterable and (sel.usb ?? false)) ? true : false %}
                                            {% if socket %}<span class="badge-mini">ENCH</span>{% endif %}
                                            {% if usb %}<span class="badge-mini">USB</span>{% endif %}
                                          </div>
                                        {% endif %}
                                      </div>
                                    {% endfor %}
                                  </div>

                                  <div class="half-sep"></div>

                                  <div class="col-half" style="height: {{ bottomCap * scale }}px;">
                                    {% for blk in (col.bottom.blocks ?? []) %}
                                      {% set hh = blk.h|default(blk) %}
                                      {% set btype = blk.type|default('door') %}

                                      {% if btype != 'screen' %}
                                        {% set doorIndex = doorIndex + 1 %}
                                      {% endif %}

                                      <div class="door {{ btype == 'screen' ? 'screen' : '' }}"
                                           style="height: {{ hh * scale }}px;">

                                        {% if btype == 'screen' %}
                                          <img src="{{ asset('assets/pantalla.png') }}" alt="Pantalla">
                                        {% else %}
                                          <div class="num">{{ doorIndex }}</div>

                                          <div class="badges">
                                            {% set key = doorIndex ~ '' %}
                                            {% set sel = addons[key] ?? addons[doorIndex] ?? null %}
                                            {% set socket = (sel is iterable and (sel.socket ?? false)) ? true : false %}
                                            {% set usb    = (sel is iterable and (sel.usb ?? false)) ? true : false %}
                                            {% if socket %}<span class="badge-mini">ENCH</span>{% endif %}
                                            {% if usb %}<span class="badge-mini">USB</span>{% endif %}
                                          </div>
                                        {% endif %}
                                      </div>
                                    {% endfor %}
                                  </div>

                                {% endif %}
                              </div>
                            </div>

                          </div>
                        {% endfor %}
                      </div>

                      {# ✅ PATAS por GRUPO -> mismas reglas que soporte_suelo final #}
                      {% if isSoporteSuelo and selectedType == 'patas' %}
                        {% set n = groupCols|length %}

                        {% if n == 1 %}
                          {% set legPositions = [1] %}
                        {% elseif n <= 3 %}
                          {% set legPositions = [1, n] %}
                        {% elseif n == 4 %}
                          {% set legPositions = [1, 3, 4] %}
                        {% else %}
                          {# n == 5 (o más) #}
                          {% set legPositions = [1, 3, 5] %}
                        {% endif %}

                        <div class="legs-under">
                          {% for pos in legPositions %}
                            <img class="leg-img"
                                 style="grid-column: {{ pos }};"
                                 src="{{ asset('assets/pie_negro.jpg') }}"
                                 alt="Pata">
                          {% endfor %}
                        </div>
                      {% endif %}

                    </div>
                  </div>

                {% endfor %}
              {% endif %}

            </div>
          </div>
        </div>

        <img id="resultadoIA"
             style="max-width:100%; margin-top:12px; display:none; border:1px solid rgba(15,23,42,.12); border-radius:12px;">
      </div>

      {# DERECHA #}
      <div class="card">
        <h3>Configuración</h3>

        <div class="kvs">
          <div class="kv"><div class="k">Tipo</div><div class="v">{{ type }}</div></div>
          <div class="kv"><div class="k">Fondo</div><div class="v">{{ bgLabel }}</div></div>
          <div class="kv"><div class="k">Ubicación</div><div class="v">{{ placementLabel }}</div></div>
          <div class="kv"><div class="k">Material</div><div class="v">{{ material }}</div></div>
          <div class="kv"><div class="k">Color puerta</div><div class="v">{{ doorColorRal }}</div></div>
          <div class="kv"><div class="k">Color cuerpo</div><div class="v">{{ bodyColorRal }}</div></div>

          {# ✅ ahora cuenta todas las columnas (de todos los grupos) #}
          <div class="kv"><div class="k">Columnas</div><div class="v">{{ columnsAll|length }}</div></div>
        </div>

        <div class="section-sep"></div>

        <h3>Datos del cliente</h3>

        <div class="kvs">
          <div class="kv"><div class="k">Proyecto</div><div class="v">{{ project.projectName }}</div></div>
          <div class="kv"><div class="k">Cliente</div><div class="v">{{ project.clientName }}</div></div>
          <div class="kv"><div class="k">Teléfono</div><div class="v">{{ project.phone ?: '—' }}</div></div>
          <div class="kv"><div class="k">Email</div><div class="v">{{ project.email ?: '—' }}</div></div>
          <div class="kv"><div class="k">Ciudad</div><div class="v">{{ project.city ?: '—' }}</div></div>
          <div class="kv"><div class="k">Dirección</div><div class="v">{{ project.address ?: '—' }}</div></div>
        </div>

        <div class="section-sep"></div>
        <h3>Puertas por tamaño</h3>

        {% set sizeCounts = {} %}
        {% set totalDoors = 0 %}

        {# ✅ IMPORTANTE: recorremos columnsAll (todas las columnas de todos los grupos) #}
        {% for col in columnsAll %}
          {% if col.single is defined and col.single is not empty %}

            {% for blk in (col.single.blocks ?? []) %}
              {% set btype = blk.type|default('door') %}
              {% if btype != 'screen' %}
                {% set hh = blk.h|default(blk) %}
                {% set key = 'H' ~ hh %}
                {% set sizeCounts = sizeCounts|merge({ (key): (sizeCounts[key]|default(0) + 1) }) %}
                {% set totalDoors = totalDoors + 1 %}
              {% endif %}
            {% endfor %}

          {% else %}

            {% for blk in (col.top.blocks ?? []) %}
              {% set btype = blk.type|default('door') %}
              {% if btype != 'screen' %}
                {% set hh = blk.h|default(blk) %}
                {% set key = 'H' ~ hh %}
                {% set sizeCounts = sizeCounts|merge({ (key): (sizeCounts[key]|default(0) + 1) }) %}
                {% set totalDoors = totalDoors + 1 %}
              {% endif %}
            {% endfor %}

            {% for blk in (col.bottom.blocks ?? []) %}
              {% set btype = blk.type|default('door') %}
              {% if btype != 'screen' %}
                {% set hh = blk.h|default(blk) %}
                {% set key = 'H' ~ hh %}
                {% set sizeCounts = sizeCounts|merge({ (key): (sizeCounts[key]|default(0) + 1) }) %}
                {% set totalDoors = totalDoors + 1 %}
              {% endif %}
            {% endfor %}

          {% endif %}
        {% endfor %}

        {% if totalDoors == 0 %}
          <div class="muted">No hay puertas (solo pantallas o vacío).</div>
        {% else %}
          <table class="addons-table">
            <thead>
              <tr>
                <th>Tamaño</th>
                <th>Cantidad</th>
              </tr>
            </thead>
            <tbody>
              {% for h in [10,20,30,40,50,60,70,80,90] %}
                {% set k = 'H' ~ h %}
                {% if sizeCounts[k]|default(0) > 0 %}
                  <tr>
                    <td><b>{{ k }}</b></td>
                    <td>{{ sizeCounts[k] }}</td>
                  </tr>
                {% endif %}
              {% endfor %}
              <tr>
                <td><b>Total puertas</b></td>
                <td><b>{{ totalDoors }}</b></td>
              </tr>
            </tbody>
          </table>
        {% endif %}

        <div class="section-sep"></div>
        <h3>Complementos</h3>

        {% set totalSocket = 0 %}
        {% set totalUsb = 0 %}
        {% set totalBoth = 0 %}

        {% for doorNum, sel in addons %}
          {% set socket = (sel is iterable and (sel.socket ?? false)) ? 1 : 0 %}
          {% set usb    = (sel is iterable and (sel.usb ?? false)) ? 1 : 0 %}

          {% set totalSocket = totalSocket + socket %}
          {% set totalUsb    = totalUsb + usb %}
          {% if socket and usb %}
            {% set totalBoth = totalBoth + 1 %}
          {% endif %}
        {% endfor %}

        <div class="kvs" style="margin-top:10px;">
          <div class="kv">
            <div class="k">Total enchufes</div>
            <div class="v">{{ totalSocket }}</div>
          </div>
          <div class="kv">
            <div class="k">Total USB</div>
            <div class="v">{{ totalUsb }}</div>
          </div>
          <div class="kv">
            <div class="k">Puertas con ambos</div>
            <div class="v">{{ totalBoth }}</div>
          </div>
        </div>

        <h3 style="margin-top:14px;">Detalle (solo puertas con complementos)</h3>

        {% set anyAddon = false %}
        {% for doorNum, sel in addons %}
          {% set socket = (sel is iterable and (sel.socket ?? false)) ? true : false %}
          {% set usb    = (sel is iterable and (sel.usb ?? false)) ? true : false %}
          {% if socket or usb %}
            {% set anyAddon = true %}
          {% endif %}
        {% endfor %}

        {% if not anyAddon %}
          <div class="muted">No hay puertas con complementos.</div>
        {% else %}
          <table class="addons-table">
            <thead>
              <tr>
                <th>Puerta</th>
                <th>Complemento</th>
              </tr>
            </thead>
            <tbody>
              {% for doorNum, sel in addons|sort %}
                {% set socket = (sel is iterable and (sel.socket ?? false)) ? true : false %}
                {% set usb    = (sel is iterable and (sel.usb ?? false)) ? true : false %}

                {% if socket or usb %}
                  {% set label = socket and usb
                    ? 'Enchufe + USB'
                    : (socket ? 'Enchufe' : 'USB')
                  %}

                  <tr>
                    <td><b>{{ doorNum }}</b></td>
                    <td>{{ label }}</td>
                  </tr>
                {% endif %}
              {% endfor %}
            </tbody>
          </table>
        {% endif %}

      </div>
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="https://cdn.jsdelivr.net/npm/html2canvas@1.4.1/dist/html2canvas.min.js"></script>

  <script>
    window.addEventListener('DOMContentLoaded', function () {
      const btn = document.getElementById('btnIA');
      const status = document.getElementById('iaStatus');
      const node = document.getElementById('previewCapture');

      if (!btn || !status || !node) return;

      btn.addEventListener('click', async function () {
        status.style.display = 'inline';
        status.textContent = 'Generando…';
        btn.disabled = true;

        try {
          const canvas = await html2canvas(node, { backgroundColor: '#ffffff', scale: 1 });
          const dataUrl = canvas.toDataURL('image/png');

          const prompt =
            `Genera un render realista del armario/taquillas basado en el esquema adjunto.
            - Color puertas: {{ doorColor|e('js') }}
            - Color cuerpo/bordes: {{ bodyColor|e('js') }}
            - Fondo: {{ bgLabel|e('js') }}
            - Ubicación: {{ placementLabel|e('js') }}
            - Material: {{ material|e('js') }}
            - Instalación: {{ instalacion|e('js') }}
            - Soporte: {{ selectedType|e('js') }} {{ selectedColor|e('js') }}
            Respeta el número de puertas y proporciones del esquema.`;

          const form = new FormData();
          form.append('prompt', prompt);
          form.append('preview_base64', dataUrl);

          const res = await fetch('{{ path("api_generar_imagen") }}', {
            method: 'POST',
            body: form
          });

          const text = await res.text();
          let json = null;

          try {
            json = JSON.parse(text);
          } catch (e) {
            console.error('Respuesta NO JSON del servidor:', text);
            alert('El servidor devolvió un error (no JSON). Mira la consola y el log de Symfony.');
            return;
          }

          if (!res.ok) {
            alert(json.error || 'Error generando imagen');
            return;
          }

          const img = document.getElementById('resultadoIA');
          img.src = 'data:' + json.mime + ';base64,' + json.image_base64;
          img.style.display = 'block';

        } catch (e) {
          console.error(e);
          alert('Error inesperado (mira consola).');
        } finally {
          status.style.display = 'none';
          btn.disabled = false;
        }
      });
    });
  </script>
{% endblock %}
