{% extends 'layout.html.twig' %}

{% set p = payload ?? {} %}
{% set columns = p.columns ?? [] %}
{% set type = p.type %}
{% set doorColor = p.colorDoor ?? '#3a9efc' %}
{% set bodyColor = p.colorBody ?? '#000' %}
{% set bg = p.background_size ?? '' %}
{% set placement = p.placement ?? '' %}
{% set material = p.material ?? '' %}

{% set bgLabel =
  bg == 'small'  ? 'Serie 300' :
  bg == 'medium' ? 'Serie 400' :
  bg == 'large'  ? 'Serie 500' : '—'
%}

{% set placementLabel =
  placement == 'interior' ? 'Interior' :
  placement == 'exterior' ? 'Exterior' : '—'
%}


{% block page_title %}Resumen{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    :root{ --hscale: 2px; }

    .wrap{
      max-width: 1100px;
      margin: 18px auto;
      background:#fff;
      border:1px solid rgba(15,23,42,.12);
      border-radius:16px;
      padding:14px;
    }
    .grid{
      display:grid;
      grid-template-columns: 1.2fr .8fr;
      gap:14px;
    }
    @media (max-width: 980px){
      .grid{ grid-template-columns: 1fr; }
    }

    .card{
      border:1px solid rgba(15,23,42,.12);
      border-radius:16px;
      padding:12px;
      background:#fff;
    }
    .card h3{ margin:0 0 10px; }

    .kvs{
      display:grid;
      grid-template-columns: 1fr 1fr;
      gap:10px;
    }
    .kv{
      border:1px solid rgba(15,23,42,.10);
      border-radius:14px;
      padding:10px;
      background:#fbfcfe;
    }
    .kv .k{ font-size:12px; color:#6b7280; font-weight:900; }
    .kv .v{ font-size:14px; font-weight:900; margin-top:4px; }

    .cols{
      display:flex;
      gap:12px;
      flex-wrap:wrap;
      margin-top:10px;
    }

    .col-shell{ width:140px; display:flex; flex-direction:column; gap:6px; }
    .col-topbar{
      padding:6px 8px;
      border-radius:8px;
      background:#003b73;
      color:#fff;
      font-weight:900;
    }

    .col-card{
      width:140px;
      border-style:solid;
      border-color: var(--col-border, #000);
      border-left-width:4px;
      border-right-width:4px;
      border-top-width:8px;
      border-bottom-width:8px;
      border-radius:8px;
      overflow:hidden;
      background:#f7f7f7;
    }

    .col-body{
      height:calc(180 * var(--hscale));
      background:#eaeaea;
      display:flex;
      flex-direction:column;
    }

    .col-half{
      height:calc(90 * var(--hscale));
      display:flex;
      flex-direction:column;
      overflow:hidden;
    }

    .half-sep{ border-top:2px dashed rgba(0,0,0,.35); }

    .door{
      width:100%;
      border:1px solid rgba(44,62,80,.9);
      background: var(--door-color, #3a9efc);
      position:relative;
    }

    .door .num{
      position:absolute;
      left:6px;
      top:4px;
      font-weight:900;
      font-size:12px;
      background: rgba(0,0,0,.65);
      color:#fff;
      border-radius:999px;
      padding:2px 7px;
      line-height:1.2;
    }

    .btn{
      border:1px solid rgba(15,23,42,.12);
      background:#fff;
      border-radius:999px;
      padding:10px 14px;
      font-weight:900;
      cursor:pointer;
      display:inline-block;
      text-decoration:none;
      color:#0b1220;
    }
    .btn.primary{ background:#0b76d8; border-color:#0b76d8; color:#fff; }
    .btn-row{ display:flex; gap:10px; flex-wrap:wrap; align-items:center; margin-top:10px; }
    .muted{ color:#6b7280; font-size:16px; }
  </style>
{% endblock %}

{% block content %}
  <div class="wrap">

    <h2 style="margin:0 0 10px;">Resumen</h2>
    <div class="muted">

      ID configuración:
      <b>{{ configuration.id }}</b>

      {% if configuration.status == 0 %}
        <span class="badge open">Abierta</span>
      {% elseif configuration.status == 1 %}
        <span class="badge closed">Cerrada</span>
      {% else %}
        <span class="badge accepted">Aceptada</span>
      {% endif %}

    </div>
    
    <div class="grid" style="margin-top:12px;">

      {# IZQUIERDA #}
      <div class="card">
        <h3>Vista previa</h3>

        <div id="previewCols" class="cols" style="--door-color: {{ doorColor }}; --col-border: {{ bodyColor }};">
          {% set doorIndex = 0 %}

          {% for col in columns %}
            <div class="col-shell">
              <div class="col-topbar">Columna {{ loop.index }}</div>

              <div class="col-card">
                <div class="col-body">

                  <div class="col-half">
                    {% for h in col.top.blocks %}
                      {% set doorIndex = doorIndex + 1 %}
                      <div class="door" style="height: {{ h * 2 }}px;">
                        <div class="num">{{ doorIndex }}</div>
                      </div>
                    {% endfor %}
                  </div>

                  <div class="half-sep"></div>

                  <div class="col-half">
                    {% for h in col.bottom.blocks %}
                      {% set doorIndex = doorIndex + 1 %}
                      <div class="door" style="height: {{ h * 2 }}px;">
                        <div class="num">{{ doorIndex }}</div>
                      </div>
                    {% endfor %}
                  </div>

                </div>
              </div>
            </div>
          {% endfor %}
        </div>

       {# <div style="margin-top:12px; display:flex; gap:10px; flex-wrap:wrap; align-items:center;">
          <button class="btn primary" type="button" id="btnIA">Generar imagen IA</button>
          <span class="muted" id="iaStatus" style="display:none;">Generando…</span>
        </div>

        <img id="resultadoIA"
             style="max-width:100%; margin-top:12px; display:none; border:1px solid rgba(15,23,42,.12); border-radius:12px;">#}
      </div>

      {# DERECHA #}
      <div class="card">
        <h3>Configuración</h3>

        <div class="kvs">
          <div class="kv"><div class="k">Tipo</div><div class="v">{{ type }}</div></div>
          <div class="kv"><div class="k">Fondo</div><div class="v">{{ bgLabel }}</div></div>
          <div class="kv"><div class="k">Ubicación</div><div class="v">{{ placementLabel }}</div></div>
          <div class="kv"><div class="k">Material</div><div class="v">{{ material }}</div></div>
          <div class="kv"><div class="k">Color puerta</div><div class="v">{{ doorColor }}</div></div>
          <div class="kv"><div class="k">Color cuerpo</div><div class="v">{{ bodyColor }}</div></div>
          <div class="kv"><div class="k">Columnas</div><div class="v">{{ columns|length }}</div></div>
        </div>

        <hr style="margin:14px 0;">

        <h3>Datos del cliente</h3>

        <div class="kvs">
          <div class="kv"><div class="k">Proyecto</div><div class="v">{{ project.projectName }}</div></div>
          <div class="kv"><div class="k">Cliente</div><div class="v">{{ project.clientName }}</div></div>
          <div class="kv"><div class="k">Teléfono</div><div class="v">{{ project.phone ?: '—' }}</div></div>
          <div class="kv"><div class="k">Email</div><div class="v">{{ project.email ?: '—' }}</div></div>
          <div class="kv"><div class="k">Ciudad</div><div class="v">{{ project.city ?: '—' }}</div></div>
          <div class="kv"><div class="k">Dirección</div><div class="v">{{ project.address ?: '—' }}</div></div>
        </div>

        <div class="btn-row">
          <a class="btn" href="{{ path('configuration_project_new') }}">Nuevo proyecto</a>
          <a class="btn primary" href="{{ path('configuration_type', { project_id: project.id }) }}">Nueva configuración</a>
          {% if configuration.status == 0 %}
            <a class="btn primary" href="{{ path('configuration_columns', { project_id: project.id, config_id: configuration.id }) }}">Editar configuración</a>
          {% endif %}
          <a class="btn primary" href="{{ path('configuration_pdf', { id: configuration.id }) }}">Descargar PDF</a>
        </div>
      </div>

    </div>
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="https://cdn.jsdelivr.net/npm/html2canvas@1.4.1/dist/html2canvas.min.js"></script>

 <script>
  window.addEventListener('DOMContentLoaded', function () {
    const btn = document.getElementById('btnIA');
    const status = document.getElementById('iaStatus');
    const node = document.getElementById('previewCols');

    if (!btn || !status || !node) {
      console.error('Faltan elementos:', { btn, status, node });
      return;
    }

    btn.addEventListener('click', async function () {
      console.log('CLICK IA'); // <-- para confirmar

      status.style.display = 'inline';
      status.textContent = 'Generando…';
      btn.disabled = true;

      try {
        const canvas = await html2canvas(node, { backgroundColor: '#ffffff', scale: 1 });

        const dataUrl = canvas.toDataURL('image/png');

        const prompt =
`Genera un render realista del armario/taquillas basado en el esquema adjunto.
- Color puertas: {{ doorColor|e('js') }}
- Color cuerpo/bordes: {{ bodyColor|e('js') }}
- Fondo: {{ bgLabel|e('js') }}
- Ubicación: {{ placementLabel|e('js') }}
- Material: {{ material|e('js') }}
Respeta el número de puertas y proporciones del esquema.`;

        const form = new FormData();
        form.append('prompt', prompt);
        form.append('preview_base64', dataUrl);

        const res = await fetch('{{ path("api_generar_imagen") }}', {
          method: 'POST',
          body: form
        });

        const text = await res.text();
        let json = null;

        try {
          json = JSON.parse(text);
        } catch (e) {
          console.error('Respuesta NO JSON del servidor:', text);
          alert('El servidor devolvió un error (no JSON). Mira la consola y el log de Symfony.');
          return;
        }

        if (!res.ok) {
          alert(json.error || 'Error generando imagen');
          return;
        }


        if (!res.ok) {
          alert(json.error || 'Error generando imagen');
          return;
        }

        const img = document.getElementById('resultadoIA');
        img.src = 'data:' + json.mime + ';base64,' + json.image_base64;
        img.style.display = 'block';

      } catch (e) {
        console.error(e);
        alert('Error inesperado (mira consola).');
      } finally {
        status.style.display = 'none';
        btn.disabled = false;
      }
    });
  });
</script>

{% endblock %}
