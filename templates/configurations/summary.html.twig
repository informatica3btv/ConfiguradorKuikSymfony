{% extends 'layout.html.twig' %}
{% block page_title %}Resumen{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    :root{ --hscale: 2px; }

    .wrap{
      max-width: 1100px;
      margin: 18px auto;
      background:#fff;
      border:1px solid rgba(15,23,42,.12);
      border-radius:16px;
      padding:14px;
    }

    .grid{
      display:grid;
      grid-template-columns: 1.2fr .8fr;
      gap:14px;
    }
    @media (max-width: 980px){
      .grid{ grid-template-columns: 1fr; }
    }

    .card{
      border:1px solid rgba(15,23,42,.12);
      border-radius:16px;
      padding:12px;
      background:#fff;
    }
    .card h3{ margin:0 0 10px; }

    .kvs{
      display:grid;
      grid-template-columns: 1fr 1fr;
      gap:10px;
    }
    .kv{
      border:1px solid rgba(15,23,42,.10);
      border-radius:14px;
      padding:10px;
      background:#fbfcfe;
    }
    .kv .k{ font-size:12px; color:#6b7280; font-weight:900; }
    .kv .v{ font-size:14px; font-weight:900; margin-top:4px; }

    .cols{
      display:flex;
      gap:12px;
      flex-wrap:wrap;
      margin-top:10px;
    }

    .col-shell{ width:140px; display:flex; flex-direction:column; gap:6px; }
    .col-topbar{
      padding:6px 8px;
      border-radius:8px;
      background:#003b73;
      color:#fff;
      font-weight:900;
    }

    .col-card{
      width:140px;
      border-style:solid;
      border-color: var(--col-border, #000);
      border-left-width:4px;
      border-right-width:4px;
      border-top-width:8px;
      border-bottom-width:8px;
      border-radius:8px;
      overflow:hidden;
      background:#f7f7f7;
    }

    .col-body{
      height:calc(180 * var(--hscale));
      background:#eaeaea;
      display:flex;
      flex-direction:column;
    }

    .col-half{
      height:calc(90 * var(--hscale));
      display:flex;
      flex-direction:column;
      overflow:hidden;
    }

    .half-sep{ border-top:2px dashed rgba(0,0,0,.35); }

    /* PUERTA */
    .door{
      width:100%;
      border:1px solid rgba(44,62,80,.9);
      background: var(--door-color, #3a9efc);
      position:relative;
      user-select:none;
    }

    .door .num{
      position:absolute;
      left:6px;
      top:4px;
      font-weight:900;
      font-size:12px;
      background: rgba(0,0,0,.65);
      color:#fff;
      border-radius:999px;
      padding:2px 7px;
      line-height:1.2;
    }

    .door .badges{
      position:absolute;
      right:6px;
      top:4px;
      display:flex;
      gap:4px;
    }
    .badge{
      font-size:11px;
      font-weight:900;
      background: rgba(255,255,255,.92);
      border:1px solid rgba(0,0,0,.25);
      border-radius:999px;
      padding:1px 6px;
    }

    .field label{
      display:block;
      font-weight:900;
      font-size:18px;
      margin: 0 0 6px;
    }
    .field input, .field textarea{
      width:90%;
      padding:10px 12px;
      border-radius:14px;
      border:1px solid rgba(15,23,42,.14);
      outline:none;
    }
    .field textarea{ min-height: 96px; resize: vertical; }

    .btn{
      border:1px solid rgba(15,23,42,.12);
      background:#fff;
      border-radius:999px;
      padding:10px 14px;
      font-weight:900;
      cursor:pointer;
      display:inline-block;
      text-decoration:none;
      color:#0b1220;
    }
    .btn.primary{ background:#0b76d8; border-color:#0b76d8; color:#fff; }
    .btn-row{ display:flex; gap:10px; flex-wrap:wrap; align-items:center; margin-top:10px; }
    .muted{ color:#6b7280; font-size:13px; }
  </style>
{% endblock %}

{% block content %}
  {% set p = payload ?? {} %}
  {% set columns = p.columns ?? [] %}
  {% set addons = p.addons ?? {} %}
  {% set type = p.type %}
  {% set doorColor = p.colorDoor ?? '#3a9efc' %}
  {% set bodyColor = p.colorBody ?? '#000' %}

  {% set bg = p.background_size ?? '' %}
  {% set placement = p.placement ?? '' %}
  {% set material = p.material ?? '' %}

  {% set bgLabel =
    bg == 'small'  ? 'Serie 300' :
    bg == 'medium' ? 'Serie 400' :
    bg == 'large'  ? 'Serie 500' : '—'
  %}

  {% set placementLabel =
    placement == 'interior' ? 'Interior' :
    placement == 'exterior' ? 'Exterior' : '—'
  %}

  <div class="wrap">

    <h2 style="margin:0 0 10px;">Resumen</h2>
    <div class="muted">ID configuración: <b>{{ configuration.id }}</b></div>

    <div class="grid" style="margin-top:12px;">

      {# ======================
         IZQUIERDA: PREVIEW
         ====================== #}
      <div class="card">
        <h3 style="margin:0;">Vista previa</h3>
        <div class="muted" style="margin-top:6px;">
          Puertas numeradas con complementos marcados (ENCH / USB).
        </div>

        {% if columns is empty %}
          <div style="margin-top:12px; color:#c0392b; font-weight:900;">
            No hay columnas en esta configuración.
          </div>
        {% else %}
          <div class="cols"
               style="--door-color: {{ doorColor }}; --col-border: {{ bodyColor }};">
            {% set doorIndex = 0 %}

            {% for col in columns %}
              <div class="col-shell">
                <div class="col-topbar">Columna {{ loop.index }}</div>

                <div class="col-card">
                  <div class="col-body">

                    <div class="col-half">
                      {% for h in col.top.blocks %}
                        {% set doorIndex = doorIndex + 1 %}
                        {% set sel = addons[doorIndex ~ ''] ?? null %}

                        <div class="door" style="height: {{ h * 2 }}px;">
                          <div class="num">{{ doorIndex }}</div>
                          <div class="badges">
                            {% if sel and sel.socket %}
                              <div class="badge">ENCH</div>
                            {% endif %}
                            {% if sel and sel.usb %}
                              <div class="badge">USB</div>
                            {% endif %}
                          </div>
                        </div>
                      {% endfor %}
                    </div>

                    <div class="half-sep"></div>

                    <div class="col-half">
                      {% for h in col.bottom.blocks %}
                        {% set doorIndex = doorIndex + 1 %}
                        {% set sel = addons[doorIndex ~ ''] ?? null %}

                        <div class="door" style="height: {{ h * 2 }}px;">
                          <div class="num">{{ doorIndex }}</div>
                          <div class="badges">
                            {% if sel and sel.socket %}
                              <div class="badge">ENCH</div>
                            {% endif %}
                            {% if sel and sel.usb %}
                              <div class="badge">USB</div>
                            {% endif %}
                          </div>
                        </div>
                      {% endfor %}
                    </div>

                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        {% endif %}
      </div>

      {# ======================
         DERECHA: DATOS + FORM
         ====================== #}
      <div class="card">
        <h3>Configuración elegida</h3>

        <div class="kvs">
          <div class="kv">
            <div class="k">Tipo</div>
            <div class="v">{{ type }}</div>
          </div>

          <div class="kv">
            <div class="k">Medida de fondo</div>
            <div class="v">{{ bgLabel }}</div>
          </div>

          <div class="kv">
            <div class="k">Interior / Exterior</div>
            <div class="v">{{ placementLabel }}</div>
          </div>

          <div class="kv">
            <div class="k">Material</div>
            <div class="v">{{ material ?: '—' }}</div>
          </div>

          <div class="kv">
            <div class="k">Color puerta</div>
            <div class="v">{{ doorColor }}</div>
          </div>

          <div class="kv">
            <div class="k">Color cuerpo</div>
            <div class="v">{{ bodyColor }}</div>
          </div>

          <div class="kv">
            <div class="k">Columnas</div>
            <div class="v">{{ columns|length }}</div>
          </div>
        </div>

        <hr style="border:0; border-top:1px solid rgba(15,23,42,.10); margin:12px 0;">

        <h3 style="margin-top:0; font-size:22px;">Datos del cliente</h3>

        {# ⚠️ Pon aquí tu action real cuando tengas endpoint #}
        <form method="post" action="{{ path('configuration_save_customer', { id: configuration.id }) }}">
          <input type="hidden" name="configuration_id" value="{{ configuration.id }}">
          <input type="hidden" name="_token" value="{{ csrf_token('customer_' ~ configuration.id) }}">
          
          <div class="form-row">
            <div class="field">
              <label for="customer_name">Nombre</label>
              <input id="customer_name" name="customer_name" type="text" required>
            </div>

            <div class="field">
              <label for="customer_phone">Teléfono</label>
              <input id="customer_phone" name="customer_phone" type="text">
            </div>

            <div class="field">
              <label for="customer_email">Correo</label>
              <input id="customer_email" name="customer_email" type="email" required>
            </div>

            <div class="field">
              <label for="customer_city">Ciudad</label>
              <input id="customer_city" name="customer_city" type="text">
            </div>
          </div>

          <div class="field" style="margin-top:10px;">
            <label for="customer_address">Dirección</label>
            <textarea id="customer_address" name="customer_address" placeholder="Calle, número, piso, código postal..."></textarea>
          </div>

          <div class="btn-row">
            <a class="btn" href="{{ path('configuration_index', { config_id: configuration.id }) }}">
              Volver al configurador
            </a>

            <button type="submit" class="btn primary">
              Guardar solicitud
            </button>
          </div>
        </form>

        
      </div>

    </div>
  </div>
{% endblock %}
