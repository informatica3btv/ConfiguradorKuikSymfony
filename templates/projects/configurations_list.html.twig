                                                <img src="{{ asset('assets/pantalla.png') }}" alt="Pantalla">
                                              {% else %}
                                                <div class="num">{{ doorIndex }}</div>
                                              {% endif %}
                                            </div>
                                          {% endfor %}
                                        </div>
                                      {% endif %}

                                    </div>
                                  </div>
                                </div>

                              {% endfor %}
                            </div>

                            {# âœ… PATAS por GRUPO -> misma regla que Resumen, pero en mini #}
                            {% if isSoporteSuelo and selectedType == 'patas' %}
                              {% set n = colsToShow|length %}

                              {% if n == 1 %}
                                {% set legPositions = [1] %}
                              {% elseif n <= 3 %}
                                {% set legPositions = [1, n] %}
                              {% elseif n == 4 %}
                                {% set legPositions = [1, 3, 4] %}
                              {% else %}
                                {# n == 5 (o mÃ¡s) #}
                                {% set legPositions = [1, 3, 5] %}
                              {% endif %}

                              {# âœ… imagen segÃºn color #}
                              {% set legSrc =
                                selectedColor == 'blanco' ? asset('assets/pie_blanco.jpg') :
                                (selectedColor == 'plata' ? asset('assets/pie_plata.jpg') : asset('assets/pie_negro.jpg'))
                              %}

                              <div class="mini-legs-under" style="--colsN: {{ n }};">
