{% extends 'layout.html.twig' %}
{% block page_title %}Administración · Atributos{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    :root{
      --bg:#f6f9fc; --ink:#0b1220; --muted:#6b7280; --line: rgba(15,23,42,.12);
      --card:#fff; --shadow: 0 10px 25px rgba(2,20,60,.08); --shadow-sm: 0 6px 14px rgba(2,20,60,.08);
      --blue:#0b76d8;
      --danger:#ef4444;
    }

    .admin-wrap{ max-width:1200px; margin:26px auto 70px; padding:0 14px; }
    .admin-title{ font-size:34px; font-weight:900; letter-spacing:-.02em; margin:0; }
    .admin-sub{ color:var(--muted); margin-top:6px; }

    .admin-card{
      margin-top:16px;
      background:var(--card);
      border:1px solid var(--line);
      border-radius:16px;
      padding:16px;
      box-shadow: var(--shadow);
    }

    .toolbar{
      display:flex;
      gap:10px;
      align-items:center;
      justify-content:space-between;
      flex-wrap:wrap;
    }

    .btn{
      border:1px solid rgba(15,23,42,.12);
      background:#fff;
      border-radius:14px;
      padding:10px 14px;
      font-weight:900;
      cursor:pointer;
      display:inline-flex;
      gap:10px;
      align-items:center;
      text-decoration:none;
      color:#0b1220;
    }
    .btn.primary{ background:var(--blue); border-color:var(--blue); color:#fff; }
    .btn:active{ transform: translateY(1px); }

    .grid{
      margin-top:14px;
      display:grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap:12px;
    }
    @media (max-width: 980px){ .grid{ grid-template-columns: 1fr 1fr; } }
    @media (max-width: 620px){ .grid{ grid-template-columns: 1fr; } }

    .attr-card{
      background:#fff;
      border:1px solid rgba(15,23,42,.10);
      border-radius:16px;
      padding:14px;
      display:flex;
      justify-content:space-between;
      align-items:flex-start;
      gap:12px;
      box-shadow: var(--shadow-sm);
    }

    .attr-name{ font-weight:900; margin:0; }
    .attr-meta{ margin-top:4px; color:var(--muted); font-size:13px; }
    .attr-desc{ margin-top:8px; color:#111827; opacity:.85; font-size:14px; line-height:1.3; }

    .trash-btn{
      width:40px; height:40px;
      border-radius:14px;
      border:1px solid rgba(239,68,68,.25);
      background: rgba(239,68,68,.10);
      color: var(--danger);
      display:flex; align-items:center; justify-content:center;
      cursor:pointer;
    }
    .trash-btn:hover{ background: rgba(239,68,68,.16); }
    .trash-form{ margin:0; }
  </style>
{% endblock %}

{% block content %}
<div class="admin-wrap">
  <div>
    <div class="admin-title">Atributos</div>
  </div>

  <div class="admin-card">
    <div class="toolbar">
      <div style="font-weight:900; font-size:22px;">
        {{ type.name }}
      </div>

      <div style="display:flex; gap:10px; flex-wrap:wrap;">
        <a class="btn" href="{{ path('admin_attributes_types_edit', {id: type.id}) }}">← Tipos</a>

        <a class="btn primary" href="{{ path('admin_attributes_types_attributes_new', {id: type.id}) }}">+ Añadir</a>
      </div>
    </div>

    <div class="grid">
      {% for a in attributes %}
        <div class="attr-card">
          <div style="min-width:0;">
            <div class="attr-name">{{ a.name }}</div>
            <div class="attr-meta">
              value: <b>{{ a.value }}</b>
              {% if a.configurationTypes is defined %}
                {# si quieres mostrar cuántos configTypes tiene #}
                <span style="opacity:.6;">·</span>
                {{ a.configurationTypes|length }} configTypes
              {% endif %}
            </div>

            {% if a.description %}
              <div class="attr-desc">{{ a.description }}</div>
            {% endif %}
          </div>

          <div style="display:flex; gap:10px; align-items:center;">
            <a class="btn" href="{{ path('admin_attributes_types_attributes_edit', {id: type.id, attrId: a.id}) }}">Editar</a>

            <form class="trash-form"
                  method="post"
                  action="{{ path('admin_attributes_types_attributes_delete', {id: type.id, attrId: a.id}) }}"
                  onsubmit="return confirm('¿Eliminar atributo?');">
              <input type="hidden" name="_token" value="{{ csrf_token('del_attr_' ~ a.id) }}">
              <button class="trash-btn" type="submit" aria-label="Eliminar">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                  <path d="M4 7h16" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                  <path d="M10 11v6M14 11v6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                  <path d="M6 7l1 14h10l1-14" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
                  <path d="M9 7V4h6v3" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
                </svg>
              </button>
            </form>
          </div>
        </div>
      {% else %}
        <div style="opacity:.75;">No hay atributos todavía.</div>
      {% endfor %}
    </div>

    <div style="margin-top:16px;">
      <a class="btn" href="{{ path('admin_dashboard') }}">← Volver al panel</a>
    </div>
  </div>
</div>
{% endblock %}
