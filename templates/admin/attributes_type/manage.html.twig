{% extends 'layout.html.twig' %}
{% block page_title %}Administración · Tipos de atributos{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    :root{
      --bg:#f6f9fc; --ink:#0b1220; --muted:#6b7280; --line: rgba(15,23,42,.12);
      --card:#fff; --shadow: 0 10px 25px rgba(2,20,60,.08); --shadow-sm: 0 6px 14px rgba(2,20,60,.08);
      --blue:#0b76d8;
    }

    .admin-wrap{ max-width:1200px; margin:26px auto 70px; padding:0 14px; }
    .admin-title{ font-size:34px; font-weight:900; letter-spacing:-.02em; margin:0; }
    .admin-sub{ color:var(--muted); margin-top:6px; }

    .admin-card{
      margin-top:16px;
      background:var(--card);
      border:1px solid var(--line);
      border-radius:16px;
      padding:16px;
      box-shadow: var(--shadow);
    }

    .manage-grid{
      display:grid;
      grid-template-columns: 360px 1fr;
      gap:14px;
      margin-top:14px;
    }
    @media (max-width: 980px){
      .manage-grid{ grid-template-columns: 1fr; }
    }

    .list{
      background:#fff;
      border:1px solid rgba(15,23,42,.10);
      border-radius:16px;
      padding:12px;
      box-shadow: var(--shadow-sm);
    }

    .type-item{
      display:flex;
      align-items:center;
      justify-content:space-between;
      gap:10px;
      padding:12px 12px;
      border-radius:14px;
      border:1px solid rgba(15,23,42,.10);
      text-decoration:none;
      color:inherit;
      margin-bottom:10px;
      background:#fff;
    }
    .type-item.active{
      border-color: rgba(11,118,216,.35);
      box-shadow: 0 0 0 6px rgba(11,118,216,.10);
    }
    .type-name{ font-weight:900; }
    .type-meta{ color:var(--muted); font-size:13px; margin-top:3px; }

    .panel{
      background:#fff;
      border:1px solid rgba(15,23,42,.10);
      border-radius:16px;
      padding:14px;
      box-shadow: var(--shadow-sm);
    }

    .toolbar{
      display:flex;
      gap:10px;
      align-items:center;
      justify-content:space-between;
      flex-wrap:wrap;
      margin-bottom:12px;
    }

    .btn{
      border:1px solid rgba(15,23,42,.12);
      background:#fff;
      border-radius:14px;
      padding:10px 14px;
      font-weight:900;
      cursor:pointer;
      display:inline-flex;
      gap:10px;
      align-items:center;
      text-decoration:none;
      color:#0b1220;
    }
    .btn.primary{ background:var(--blue); border-color:var(--blue); color:#fff; }

    .form-row{ margin-bottom:12px; }
    label{ display:block; font-weight:900; margin-bottom:6px; font-size:14px; }
    input, select, textarea{
      width:100%;
      padding:12px 14px;
      border-radius:14px;
      border:1px solid rgba(15,23,42,.18);
      background:#fff;
      font-size:14px;
    }
  </style>
{% endblock %}

{% block content %}
<div class="admin-wrap">
  <div>
    <div class="admin-title">Tipos de atributos</div>
    <div class="admin-sub">Edita el nombre y el tipo (button/selectable).</div>
  </div>

  <div class="admin-card">
    <div class="toolbar">
      <div style="font-weight:900; font-size:22px;">
        Gestión de tipos
      </div>
      <a class="btn primary" href="{{ path('admin_attributes_types_new') }}">+ Nuevo tipo</a>
      <a class="btn" href="{{ path('admin_dashboard') }}">← Volver</a>
    </div>

    <div class="manage-grid">
      <div class="list">
        {% for t in types %}
          <a class="type-item {{ current.id == t.id ? 'active' : '' }}"
             href="{{ path('admin_attributes_types_edit', {id: t.id}) }}">
            <div style="min-width:0;">
              <div class="type-name">{{ t.name }}</div>
              <div class="type-meta">{{ t.value }} · {{ t.type }}</div>
            </div>
            <div style="opacity:.6; font-weight:900;">→</div>
          </a>
        {% endfor %}
      </div>

      <div class="panel">
        <div class="toolbar">
          <div>
            <div style="font-weight:900; font-size:20px;">Editar: {{ current.name }}</div>
            <div style="color:var(--muted); font-size:13px; margin-top:4px;">
              value: <b>{{ current.value }}</b>
            </div>
          </div>

          <a class="btn" href="{{ path('admin_attributes_types_attributes_index', {id: current.id}) }}">
            Ver atributos
          </a>
        </div>

        {{ form_start(form) }}
          <div class="form-row">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
          </div>

          <div class="form-row">
            {{ form_label(form.type) }}
            {{ form_widget(form.type) }}
          </div>

          <div class="form-row">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
          </div>

          <button class="btn primary" type="submit">Guardar cambios</button>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}
