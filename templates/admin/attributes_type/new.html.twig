{% extends 'layout.html.twig' %}
{% block page_title %}Administración · Nuevo tipo{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  {# Reutiliza los mismos estilos que manage.html.twig:
     Si prefieres no duplicar CSS, copia/pega el mismo <style> de manage.html.twig aquí.
  #}
  <style>
    :root{
      --bg:#f6f9fc; --ink:#0b1220; --muted:#6b7280; --line: rgba(15,23,42,.12);
      --card:#fff; --shadow: 0 10px 25px rgba(2,20,60,.08); --shadow-sm: 0 6px 14px rgba(2,20,60,.08);
      --blue:#0b76d8;
    }
    .admin-wrap{ max-width:1200px; margin:26px auto 70px; padding:0 14px; }
    .admin-title{ font-size:34px; font-weight:900; letter-spacing:-.02em; margin:0; }
    .admin-sub{ color:var(--muted); margin-top:6px; }
    .admin-card{ margin-top:16px; background:var(--card); border:1px solid var(--line); border-radius:16px; padding:16px; box-shadow: var(--shadow); }
    .manage-grid{ display:grid; grid-template-columns: 360px 1fr; gap:14px; margin-top:14px; }
    @media (max-width: 980px){ .manage-grid{ grid-template-columns: 1fr; } }
    .list{ background:#fff; border:1px solid rgba(15,23,42,.10); border-radius:16px; padding:12px; box-shadow: var(--shadow-sm); }
    .type-item{ display:flex; align-items:center; justify-content:space-between; gap:10px; padding:12px; border-radius:14px; border:1px solid rgba(15,23,42,.10); text-decoration:none; color:inherit; margin-bottom:10px; background:#fff; }
    .type-name{ font-weight:900; }
    .type-meta{ color:var(--muted); font-size:13px; margin-top:3px; }
    .panel{ background:#fff; border:1px solid rgba(15,23,42,.10); border-radius:16px; padding:14px; box-shadow: var(--shadow-sm); }
    .toolbar{ display:flex; gap:10px; align-items:center; justify-content:space-between; flex-wrap:wrap; margin-bottom:12px; }
    .btn{ border:1px solid rgba(15,23,42,.12); background:#fff; border-radius:14px; padding:10px 14px; font-weight:900; cursor:pointer; display:inline-flex; gap:10px; align-items:center; text-decoration:none; color:#0b1220; }
    .btn.primary{ background:var(--blue); border-color:var(--blue); color:#fff; }
    .form-row{ margin-bottom:12px; }
    label{ display:block; font-weight:900; margin-bottom:6px; font-size:14px; }
    input, select, textarea{ width:100%; padding:12px 14px; border-radius:14px; border:1px solid rgba(15,23,42,.18); background:#fff; font-size:14px; }
  </style>
{% endblock %}

{% block content %}
<div class="admin-wrap">
  <div>
    <div class="admin-title">Nuevo tipo</div>
    <div class="admin-sub">Crea un nuevo AttributesType.</div>
  </div>

  <div class="admin-card">
    <div class="toolbar">
      <div style="font-weight:900; font-size:22px;">Crear tipo</div>
      <a class="btn" href="{{ path('admin_dashboard') }}">← Volver</a>
    </div>

    <div class="manage-grid">
      <div class="list">
        {% for t in types %}
          <a class="type-item" href="{{ path('admin_attributes_types_edit', {id: t.id}) }}">
            <div style="min-width:0;">
              <div class="type-name">{{ t.name }}</div>
              <div class="type-meta">{{ t.value }} · {{ t.type }}</div>
            </div>
            <div style="opacity:.6; font-weight:900;">→</div>
          </a>
        {% else %}
          <div style="opacity:.75;">No hay tipos todavía.</div>
        {% endfor %}
      </div>

      <div class="panel">
        {{ form_start(form) }}
          <div class="form-row">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
          </div>

          <div class="form-row">
            {{ form_label(form.type) }}
            {{ form_widget(form.type) }}
          </div>

          <div class="form-row">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
          </div>

          <button class="btn primary" type="submit">Crear</button>
        {{ form_end(form) }}

        <div style="margin-top:12px; color:var(--muted); font-size:13px;">
          * El campo <b>value</b> se genera automáticamente a partir del nombre.
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
