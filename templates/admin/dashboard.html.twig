{% extends 'layout.html.twig' %}

{% block page_title %}Administración{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    :root{
      --bg:#f6f9fc;
      --ink:#0b1220;
      --muted:#6b7280;
      --line: rgba(15,23,42,.12);
      --card:#fff;
      --shadow: 0 18px 40px rgba(2,20,60,.10);
      --shadow-sm: 0 10px 22px rgba(2,20,60,.10);
      --blue:#0b76d8;
      --blue2:#00AFEA;
    }

    .admin-wrap{ max-width:1200px; margin:26px auto 70px; padding:0 14px; }
    .admin-title{ font-size:42px; font-weight:900; letter-spacing:-.02em; margin:0; }
    .admin-sub{ color:var(--muted); margin-top:8px; font-size:16px; }

    /* PANEL GRANDE (como en tu imagen) */
    .admin-card{
      margin-top:18px;
      background:var(--card);
      border:1px solid var(--line);
      border-radius:18px;
      padding:26px;
      box-shadow: var(--shadow);
      min-height: 280px;              /* ✅ más alto */
      display:flex;
      align-items:center;              /* ✅ centra vertical */
      justify-content:center;          /* ✅ centra horizontal */
      position:relative;
      overflow:hidden;
    }

    /* ✅ Si la “rueda” existe dentro del panel, la ocultamos */
    .admin-card .gear,
    .admin-card .admin-gear,
    .admin-card [data-gear],
    .admin-card svg.gear,
    .admin-card .fa-gear,
    .admin-card .fa-cog{
      display:none !important;
    }

    .admin-grid{
      display:grid;
      grid-template-columns: repeat(2, minmax(0, 360px)); /* ✅ cards más grandes */
      gap:18px;
      width:100%;
      max-width: 820px; /* ✅ para que queden centradas y con aire */
      justify-content:center;
    }
    @media (max-width: 900px){
      .admin-card{ min-height: auto; padding:18px; }
      .admin-grid{ grid-template-columns: 1fr; max-width: 520px; }
    }

    .admin-action-card{
      display:flex;
      align-items:center;
      justify-content:space-between;
      gap:16px;
      padding:22px 22px;            
      border-radius:18px;
      border:1px solid rgba(15,23,42,.10);
      background:#fff;
      text-decoration:none;
      color:inherit;
      transition:.15s;
      box-shadow: 0 10px 20px rgba(2,20,60,.06);
      min-height: 192px;
    }
    .admin-action-card:hover{
      transform: translateY(-2px);
      box-shadow: var(--shadow-sm);
      border-color: rgba(11,118,216,.25);
    }

    .admin-action-left{
      display:flex;
      gap:14px;
      align-items:center;
      min-width: 0;
    }

    .admin-ico{
      width:54px; height:54px;        /* ✅ icono más grande */
      border-radius:16px;
      display:flex; align-items:center; justify-content:center;
      background: rgba(11,118,216,.10);
      border:1px solid rgba(11,118,216,.15);
      flex:0 0 auto;
    }

    .admin-action-title{ font-weight:900; margin:0; font-size:22px; }
    .admin-action-sub{ color:var(--muted); margin-top:4px; font-size:20px; }

    .admin-pill{
      font-weight:900;
      font-size:16px;
      padding:10px 14px;              /* ✅ pill más grande */
      border-radius:999px;
      background: rgba(0,0,0,.04);
      border:1px solid rgba(0,0,0,.08);
      white-space:nowrap;
    }
  </style>
{% endblock %}

{% block content %}
<div class="admin-wrap">

  <div>
    <div class="admin-title">Administración</div>
    <div class="admin-sub">Configura los parámetros del sistema: colores, materiales y medidas</div>
  </div>

  <div class="admin-card">
    <div class="admin-grid">

      <a href="{{ path('admin_users') }}" class="admin-action-card">
        <div class="admin-action-left">
          <div class="admin-ico">
            <!-- usuario -->
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" aria-hidden="true">
              <path d="M20 21a8 8 0 1 0-16 0" stroke="#0b1220" stroke-width="2" stroke-linecap="round"/>
              <path d="M12 12a4 4 0 1 0-4-4 4 4 0 0 0 4 4Z" stroke="#0b1220" stroke-width="2"/>
            </svg>
          </div>
          <div>
            <div class="admin-action-title">Usuarios</div>
            <div class="admin-action-sub">Gestión de usuarios</div>
          </div>
        </div>
        <div class="admin-pill">Gestionar</div>
      </a>

      <a href="{{ path('admin_colors_index', {type:'door'}) }}" class="admin-action-card">
        <div class="admin-action-left">
          <div class="admin-ico">
            <!-- paleta -->
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" aria-hidden="true">
              <path d="M12 3a9 9 0 1 0 0 18h2a2 2 0 0 0 0-4h-1a2 2 0 0 1 0-4h3a5 5 0 0 0-4-10Z" stroke="#0b1220" stroke-width="2" stroke-linejoin="round"/>
              <path d="M7.5 10.5h.01M10 8h.01M14 8h.01M16.5 10.5h.01" stroke="#0b1220" stroke-width="3" stroke-linecap="round"/>
            </svg>
          </div>
          <div>
            <div class="admin-action-title">Colores</div>
            <div class="admin-action-sub">Puerta y cuerpo</div>
          </div>
        </div>
        <div class="admin-pill">Ver</div>
      </a>

    </div>
  </div>

</div>
{% endblock %}
