<style>
  :root{
    --kuik-blue:#00AFEA;
    --kuik-blue-900:#003b73;
    --line: rgba(255,255,255,.22);
    --shadow: 0 10px 25px rgba(2,20,60,.18);
  }

  /* HEADER */
  .kuik-header{
    height:74px;
    padding:0 18px;
    background: linear-gradient(135deg, #00AFEA, #0b76d8);
    display:flex;
    align-items:center;
    justify-content:space-between;
    gap:16px;
    border-bottom: 1px solid rgba(0,0,0,.06);
  }

  .kuik-left{
    display:flex;
    align-items:center;
    gap:14px;
    min-width: 260px;
  }

  .home-pill{
    width:44px;
    height:44px;
    border-radius:14px;
    background: rgba(255,255,255,.16);
    border: 1px solid rgba(255,255,255,.22);
    display:flex;
    align-items:center;
    justify-content:center;
    text-decoration:none;
    box-shadow: 0 10px 18px rgba(0,0,0,.08);
  }
  .home-pill:hover{ background: rgba(255,255,255,.22); }
  .home-pill svg{ display:block; }

  .kuik-title{
    margin:0;
    color:#fff;
    font-weight:900;
    font-size:20px;
    letter-spacing:-0.02em;
    white-space:nowrap;
  }

  /* NAV (derecha) */
  .kuik-nav{
    display:flex;
    align-items:center;
    gap:14px;
  }

  /* Pills (botones “grandes” como Proyectos) */
  .nav-pill{
    display:inline-flex;
    align-items:center;
    gap:10px;
    padding:10px 14px;
    border-radius:14px;
    background: rgba(255,255,255,.16);
    border:1px solid rgba(255,255,255,.22);
    color:#fff;
    text-decoration:none;
    font-weight:900;
    white-space:nowrap;
  }
  .nav-pill:hover{ background: rgba(255,255,255,.22); }
  .nav-pill svg{ opacity:.95; }

  /* Links (más “ligeros”) */
  .nav-link{
    display:inline-flex;
    align-items:center;
    gap:10px;
    color:#fff;
    text-decoration:none;
    font-weight:900;
    padding:10px 10px;
    border-radius:12px;
  }
  .nav-link:hover{ background: rgba(255,255,255,.12); }

  @media (max-width: 520px){
    .kuik-title{ display:none; }
    .nav-pill span, .nav-link span{ display:none; }
  }
</style>

<header class="kuik-header">
  <div class="kuik-left">
    <a class="home-pill" href="{{ path('projects_list') }}" aria-label="Inicio">
      <!-- icono casa -->
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true">
        <path d="M3 10.5L12 3l9 7.5V21a1 1 0 0 1-1 1h-5v-7H9v7H4a1 1 0 0 1-1-1V10.5Z"
              stroke="white" stroke-width="2" stroke-linejoin="round"/>
      </svg>
    </a>

    <a style="text-decoration:none;" href="{{ path('projects_list') }}">
      <h2 class="kuik-title">Configurador Kuik</h2>
    </a>
  </div>

  {% if app.user %}
    <nav class="kuik-nav">
      <a class="nav-pill" href="{{ path('projects_list') }}">
        <!-- icono carpeta -->
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true">
          <path d="M3 7a2 2 0 0 1 2-2h5l2 2h7a2 2 0 0 1 2 2v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V7Z"
                stroke="white" stroke-width="2" stroke-linejoin="round"/>
        </svg>
        <span>Proyectos</span>
      </a>

      {% if is_granted('ROLE_ADMIN') %}
        <a class="nav-link" href="{{ path('admin_dashboard') }}">
          <!-- ✅ engranaje correcto -->
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M12 15.25a3.25 3.25 0 1 0 0-6.5 3.25 3.25 0 0 0 0 6.5Z"
                  stroke="white" stroke-width="2"/>
            <path d="M19.4 13.5c.04-.5.04-1 0-1.5l2-1.2-2-3.46-2.34.6c-.4-.34-.84-.63-1.32-.86L15.3 4.5h-6.6l-.44 2.58c-.48.23-.92.52-1.32.86l-2.34-.6-2 3.46 2 1.2c-.04.5-.04 1 0 1.5l-2 1.2 2 3.46 2.34-.6c.4.34.84.63 1.32.86l.44 2.58h6.6l.44-2.58c.48-.23.92-.52 1.32-.86l2.34.6 2-3.46-2-1.2Z"
                  stroke="white" stroke-width="2" stroke-linejoin="round"/>
          </svg>
          <span>Administración</span>
        </a>
      {% endif %}

      <!-- ✅ Cerrar sesión como “pill” -->
      <a class="nav-pill" href="{{ path('app_logout') }}">
        <!-- icono salir -->
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" aria-hidden="true">
          <path d="M10 17l-1.5 1.5A2 2 0 0 1 5 17V7a2 2 0 0 1 3.5-1.5L10 7"
                stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M15 12H9" stroke="white" stroke-width="2" stroke-linecap="round"/>
          <path d="M13 10l2 2-2 2" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <span>Cerrar sesión</span>
      </a>
    </nav>
  {% endif %}
</header>
